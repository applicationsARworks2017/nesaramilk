<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context="demosell.amaresh.android.com.nesara.Activity.EnterPhone">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="60dp"
    android:id="@+id/mainlin"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lin1"
        android:visibility="gone"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Enter your phone number to get OTP"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Phone Number"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="10"
            android:id="@+id/et_phone"
            android:background="@drawable/edittext_border"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lin2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Enter OTP you have received"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter OPT"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="6"
            android:id="@+id/et_otp"
            android:background="@drawable/edittext_border"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Resend OTP"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold|italic"
            android:id="@+id/tv_resend"/>
    </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/bt_sendotp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SEND OTP"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/mainlin"
        android:layout_marginTop="-50dp"/>
</RelativeLayout>
