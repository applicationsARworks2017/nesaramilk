<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_subscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/card_top_marigin"
            android:layout_marginBottom="16dp"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgmilk"
                    android:background="@drawable/page_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgmilk"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Organic Milk"
                    android:id="@+id/Mhead"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgmilk"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:id="@+id/edit_vprice"
                    android:text="Rs.200 / 2.0ltr"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_info_black_24dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:id="@+id/line"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:orientation="vertical">


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/center_point1"
                        android:layout_width="12dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/edit_everyday"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignRight="@+id/center_point1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_everydayimg"
                            android:background="@drawable/everyday"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/edit_alternate"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignLeft="@+id/center_point1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_alternateimg"
                            android:background="@drawable/alternateday"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/center_point"
                        android:layout_width="12dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/edit_mn_wed"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignRight="@+id/center_point"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_mn_wedimg"
                            android:background="@drawable/mtowd"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/edit_mn_fri"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignLeft="@+id/center_point">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_mn_friimg"
                            android:background="@drawable/mtofri"/>

                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Request"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/edittext_border"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/edit_min"
                        android:background="@drawable/minus"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:textSize="15dp"
                        android:id="@+id/edit_qnty"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="2.0 lt"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/edit_plus"
                        android:background="@drawable/plus"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:hint="Start Date"
                        android:id="@+id/s_edit_date"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:editable="false"
                        android:layout_gravity="left"/>
                    <EditText
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:id="@+id/e_edit_date"
                        android:layout_marginLeft="40dp"
                        android:hint="End Date"
                        android:editable="false"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        />


                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/update"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:text="Update"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
