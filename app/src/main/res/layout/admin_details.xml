<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demosell.amaresh.android.com.nesara.Activity.DeliveryDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLines="1"
                android:id="@+id/name"
                android:paddingLeft="5dp"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appartment Name"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/happatment" />

            <EditText
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLines="1"
                android:id="@+id/et_appartment"
                android:paddingLeft="5dp"
                android:editable="false"
                android:text="Sagar Apartment"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flat No"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:id="@+id/et_flatno"
                android:editable="false"
                android:background="@drawable/edittext_border"
                android:maxLines="1"
                android:text="#99"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phase"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:id="@+id/et_phase"
                android:background="@drawable/edittext_border"
                android:maxLines="1"
                android:editable="false"
                android:text="Phase2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your House Address"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/edittext_border"
                android:layout_height="80dp"
                android:id="@+id/address"
                android:editable="false"
                android:text="#99,Balagere Road, 1st Bus Stop, Varthur Main Road, Ballandur Post."
                android:gravity="left|top"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/et_phone"
                android:editable="false"
                android:background="@drawable/edittext_border"
                android:maxLength="10"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternate Phone Number"
                android:textSize="15dp"
                android:maxLength="10"
                android:inputType="phone"
                android:singleLine="true"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/et_a_ph"
                android:background="@drawable/edittext_border"
                android:maxLines="1"
                android:maxLength="10"
                android:editable="false"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Email Id"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/email"
                android:background="@drawable/edittext_border"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/submit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
