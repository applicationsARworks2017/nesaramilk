<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_clear_black_24dp"
        android:layout_marginTop="5dp"
        android:id="@+id/close"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Product Name"
          android:layout_gravity="center"
          android:textColor="@color/colorPrimary"
          android:textStyle="bold"
          android:id="@+id/pri_pName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_curPrice"
            android:textColor="@color/black"
            android:text="Cur. Price : 29.50 / 0.5 L"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update"
                android:text="Update"/>
            <EditText
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:hint="Price"
                android:id="@+id/priceupdate"
                android:padding="5dp"
                android:inputType="numberDecimal"
                android:background="@drawable/customedittext_price"
                android:layout_alignBaseline="@+id/priceqnty"
                android:layout_alignBottom="@+id/priceqnty"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:id="@+id/plusprice"
                android:layout_toRightOf="@id/priceupdate"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_add_white_24dp"/>
            </LinearLayout>
            <EditText
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/priceqnty"
                android:gravity="center"
                android:hint="Quantity"
                android:editable="false"
                android:focusable="false"
                android:padding="5dp"
                android:layout_toRightOf="@+id/priceupdate"
                android:inputType="numberDecimal"
                android:background="@drawable/customedittext_price"
                android:layout_below="@+id/plusprice"
                android:layout_alignLeft="@+id/minusprice"
                android:layout_alignStart="@+id/minusprice" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:id="@+id/minusprice"
                android:layout_below="@+id/priceqnty"
                android:layout_toRightOf="@id/priceupdate"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_remove_white_24dp"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:text="Update"
            android:id="@+id/updatePrice"
            android:textColor="@color/white_color"/>
    </LinearLayout>

</RelativeLayout>